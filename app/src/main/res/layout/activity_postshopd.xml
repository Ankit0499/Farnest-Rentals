<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        tools:context=".postshopd">

        <TextView
            android:id="@+id/tvi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details for Shop"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/tvi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:paddingBottom="10dp"
            android:text="Personal Washroom"/>

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="20dp"/>
            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="20dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tvi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corner Shop"
            android:paddingBottom="10dp"
            android:textSize="25dp"/>

        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="20dp"/>
            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="20dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tvi4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is Main Road Facing"
            android:paddingBottom="10dp"
            android:textSize="20dp"/>

        <RadioGroup
            android:id="@+id/rg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <RadioButton
                android:id="@+id/rb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="20dp"/>
            <RadioButton
                android:id="@+id/rb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="20dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tvi5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Floor Location"
            android:paddingBottom="10dp"
            android:textSize="25dp"/>

        <Spinner
            android:id="@+id/spr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupBackground="@android:color/holo_blue_dark"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
            android:paddingBottom="10dp">

        </Spinner>

        <TextView
            android:id="@+id/tvi6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Furnishing"
            android:textSize="25dp"/>

        <RadioGroup
            android:id="@+id/rg4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <RadioButton
                android:id="@+id/rb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unfurnished"
                android:textSize="20dp"/>
            <RadioButton
                android:id="@+id/rb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Semi-Furnished" />
            <RadioButton
                android:id="@+id/rb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fully-Furnished"
                android:textSize="20dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tvi7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Property Area"
            android:paddingBottom="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ett1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Carpet Area"/>

            <EditText
                android:id="@+id/ett2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Super Area"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="64dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="sqft" />

            <TextView
                android:layout_width="66dp"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="sqft"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>


        <TextView
            android:id="@+id/ttv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="30dp"
            android:text="Price you Expect" />
        <TextView
            android:id="@+id/ttv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:text="Monthly Rent"/>

        <EditText
            android:id="@+id/edtt1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Rent"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/ttv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:text="Other Expenses"/>

        <EditText
            android:id="@+id/edtt2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:hint="Expenses"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/edtt3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:hint="Security Amount"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/edtt4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:hint="Monthly Maintance Charges"
            android:paddingBottom="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/ads1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Shop No."
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/ads2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Street/Complex"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/ads3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Landmark"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/ads4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Pincode"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/ads5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="City"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/ttv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:text="Select Your Shop's Images"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/simageSelect1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_add"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="30dp"
                tools:layout_width="150dp" />

            <ImageButton
                android:id="@+id/simageSelect2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_add"
                tools:layout_width="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/simageSelect3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_add"
                android:layout_marginRight="30dp"
                tools:layout_width="150dp" />

            <ImageButton
                android:id="@+id/simageSelect4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_add"
                tools:layout_width="150dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnshop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/btn"
            android:textColor="@color/White" />

    </LinearLayout>
</ScrollView>