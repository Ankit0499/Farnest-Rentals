<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".postadd"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='House Details'
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:text="Rooms"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingBottom="12dp"/>

        <RadioGroup
            android:id="@+id/rag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <RadioButton
                android:id="@+id/rab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 BHK"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="12sp"
                android:layout_marginBottom="10dp" />

            <RadioButton
                android:id="@+id/rab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 BHK"
                android:textSize="20dp"
                android:paddingLeft="12sp"
                android:paddingBottom="10dp"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/rab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 BHK"
                android:textSize="20dp"
                android:paddingLeft="12sp"
                android:paddingBottom="10dp"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/rab4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 BHK"
                android:textSize="20dp"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bathroom"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingBottom="12dp"/>

        <RadioGroup
            android:id="@+id/rag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp"/>

            <RadioButton
                android:id="@+id/rbb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp"/>

            <RadioButton
                android:id="@+id/rbb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp"/>

            <RadioButton
                android:id="@+id/rbb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 or More"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balcony"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingBottom="12dp"/>

        <RadioGroup
            android:id="@+id/rag3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rgb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingBottom="12dp"/>

            <RadioButton
                android:id="@+id/rgb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingBottom="12dp"/>

            <RadioButton
                android:id="@+id/rgb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingBottom="12dp"/>
            <RadioButton
                android:id="@+id/rgb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingBottom="12dp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:text="Which Floor to Give?"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/sp1">
        </Spinner>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Furnishing"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <RadioGroup
            android:id="@+id/rag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/fur1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="UnFurnished"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp"/>

            <RadioButton
                android:id="@+id/fur2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Semi-Furnished"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp"/>

            <RadioButton
                android:id="@+id/fur3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Fully-Furnished"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Area"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Carpet Area"/>

            <EditText
                android:id="@+id/et2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Super Area"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="64dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="sqft" />

            <TextView
                android:layout_width="66dp"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="sqft"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/ttv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="30dp"
            android:text="Price you Expect" />
        <TextView
            android:id="@+id/ttv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:text="Monthly Rent"/>

        <EditText
            android:id="@+id/edt1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Rent"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/ttv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:text="Other Expenses"/>

        <EditText
            android:id="@+id/edt2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:hint="Expenses"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/edt3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:hint="Security Amount"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/edt4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:hint="Monthly Maintance Charges"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/ad1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="House No."
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/ad2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Street"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/ad3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Landmark"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/ad4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Pincode"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/ad5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="City"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/ttv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:text="Select Your House's Images" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/imageSelect1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_add"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="30dp"
                tools:layout_width="150dp" />

            <ImageButton
                android:id="@+id/imageSelect2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_add"
                tools:layout_width="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/imageSelect3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_add"
                android:layout_marginRight="30dp"
                tools:layout_width="150dp" />

            <ImageButton
                android:id="@+id/imageSelect4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_add"
                tools:layout_width="150dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:text="Submit"
            android:background="@color/btn"
            android:textColor="@color/White"/>

    </LinearLayout>
</ScrollView>